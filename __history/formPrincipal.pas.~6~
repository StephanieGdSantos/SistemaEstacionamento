{$R *.dfm}

procedure TForm1.AbrirTicket(Objeto: TObject);
var
  vaga: String;
  FrmEstacionar: TForm2;
begin
  vaga := TImage(Objeto).Name;

  FrmEstacionar := TForm2.Create(Application);
  FrmEstacionar.lblVaga.Caption := vaga;

  try
    FrmEstacionar.ShowModal();
  finally
    FrmEstacionar.Free;
  end;
end;

